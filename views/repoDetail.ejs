    async function requirementsText(filecontent = '') {
        // ì´ë¯¸ íŒì—…ì´ ìˆìœ¼ë©´ ìƒˆë¡œ ë§Œë“¤ì§€ ì•ŠìŒ
        if (document.querySelector('.popup')) {
            return;
        }
        const popup = document.createElement('div');
        popup.className = 'popup';

