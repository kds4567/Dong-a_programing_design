                <textarea id="requirements" placeholder="ìš”êµ¬ ì‚¬í•­ì„ ì…ë ¥í•˜ì„¸ìš”...">${filecontent}</textarea>
                <button id="inspect" onclick="checkRequirements(this)" style="align-items: end">ê²€ì‚¬</button>
                <button id="close" onclick="closePopup(this)" style="align-items:   end">ë‹«ê¸°</button>
                <div class="resize-handle top-left"></div>
            `;

        // íŒì—…ì„ bodyì— ì¶”ê°€
        document.body.appendChild(popup);

        // íŒì—…ì„ í¬ê¸° ì¡°ì • ê°€ëŠ¥í•˜ê²Œ ì„¤ì •
        makeResizable(popup);

        // íŒì—… í‘œì‹œ
