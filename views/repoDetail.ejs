            currentFilePath = filePath;
            console.log('loadFile() ê²½ë¡œ: ', currentFilePath);
            if (!response.ok) throw new Error('íŒŒì¼ì„ ë¶ˆëŸ¬ì˜¬ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.');
            const content = await response.text();
